<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://pacienteEdit.caption"
        focusComponent="formPaciente"
        messagesPack="com.company.clinic.web.screens.paciente">
    <data>
        <instance id="pacienteDc"
                  class="com.company.clinic.entity.pacientes.Paciente">
            <view extends="paciente-edit-view"/>
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <hbox spacing="true" width="100%">
            <groupBox caption="Paciente" spacing="true">
                <form id="formPaciente" dataContainer="pacienteDc" captionPosition="TOP">
                    <column>
                        <textField id="nombreField" caption="Nombre" required="true" property="nombre" width="125px"/>
                        <dateField id="fechaNacimientoField" caption="Fecha de Nacimiento"
                                   required="true" resolution="DAY" property="fechaNacimiento"/>
                    </column>
                    <column>
                        <textField id="apellidosField" caption="Apellidos" required="true" property="apellidos" width="200px"/>
                        <lookupField id="generoField" caption="Género" required="true" property="genero" width="125px"
                                 optionsEnum="com.company.clinic.entity.Genero"/>
                    </column>
                </form>
            </groupBox>

            <groupBox caption="Datos administrativos" spacing="true" icon="font-icon:ADDRESS_BOOK" height="200px">
                <form id="formDa" dataContainer="pacienteDc" captionPosition="TOP">
                    <lookupField id="estadoPacienteField" caption="Estado Paciente" property="datosAdministrativos.estadoPaciente"
                                 optionsEnum="com.company.clinic.entity.pacientes.EstadoPaciente" width="125px"/>
                    <textField id="ciudadNacimientoField" caption="Ciudad Nacimiento"
                               property="datosAdministrativos.ciudadNacimiento" width="200px"/>
                    <textField id="nacionalidadField" caption="Nacionalidad" property="datosAdministrativos.nacionalidad"
                               width="125px"/>
                    <lookupField id="provinciaAdministrativoField" caption="Provincia Nacimiento" required="true"
                                 optionsEnum="com.company.clinic.entity.Provincia"
                                 property="datosAdministrativos.provinciaNacimiento" width="200px"/>
                    <lookupField id="tipoDocumentoField" caption="Tipo Documento" required="true" property="datosAdministrativos.tipoDocumento"
                                 optionsEnum="com.company.clinic.entity.pacientes.TipoDocumento" width="80px"/>
                    <textField id="numeroDocumentoField" caption="Número Documento" property="datosAdministrativos.numeroDocumento"
                               width="135px"/>
                </form>
            </groupBox>
        </hbox>

        <hbox spacing="true" width="100%">
            <groupBox caption="Datos de contacto" spacing="true">
                <form id="formDc" dataContainer="pacienteDc" captionPosition="TOP">
                    <textField id="telefonoField" caption="Teléfono" required="true" property="datosContacto.telefono"
                               width="125px"/>
                    <textField id="emailField" caption="Email" required="true" property="datosContacto.email" width="200px"/>
                    <textField id="calleField" caption="Calle" property="datosContacto.calleContacto"/>
                    <textField id="numeroField" caption="Número" property="datosContacto.numeroContacto" width="150px"/>
                    <textField id="codigoPostalField" caption="Código Postal" property="datosContacto.codigoPostal"
                               width="125px"/>
                    <textField id="ciudadField" caption="Ciudad" property="datosContacto.ciudadContacto" width="200px"/>
                    <lookupField id="provinciaContactoField" caption="Provincia" required="true"
                                 property="datosContacto.provinciaContacto"
                                 optionsEnum="com.company.clinic.entity.Provincia" width="200px"/>
                </form>
            </groupBox>

            <form id="formDf" dataContainer="pacienteDc" captionPosition="TOP">
                <textField id="nifField" caption="NIF" required="true" property="datosFacturacion.nif" width="125px"/>
                <textField id="nombreFacturacionField" caption="Nombre" required="true" property="datosFacturacion.nombreFacturacion"
                           width="125px"/>
                <textField id="apellidosFacturacionField" caption="Apellidos" required="true" property="datosFacturacion.apellidosFacturacion"
                           width="175px"/>
                <textField id="calleFacturacionField" caption="Calle" property="datosFacturacion.calleFacturacion"/>
                <textField id="numeroFacturacionField" caption="Número" property="datosFacturacion.numeroFacturacion" width="150px"/>
                <textField id="ciudadFacturacionField" caption="Ciudad" property="datosFacturacion.ciudadFacturacion"/>
                <lookupField id="provinciaFacturacionField" caption="Provincia" required="true"
                             optionsEnum="com.company.clinic.entity.Provincia" property="datosFacturacion.provinciaFacturacion"/>
            </form>
        </hbox>
        <hbox id="editActions" spacing="true">
            <button id="insertBtn" caption="Editar" primary="true"/>
            <button id="closeBtn" action="windowClose" stylename="danger"/>
        </hbox>
    </layout>
</window>
